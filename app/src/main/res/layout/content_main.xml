<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.brunodevesa.stringformatresources.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/content_main_rl_main">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/backgroung1"
            android:scaleType="center"
            android:contextClickable="true" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false">

        <TextView
            android:id="@+id/content_main_tv_counting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tv_hint_counting"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <TextView
            android:id="@+id/content_main_tv_squareRootResult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tv_hint_squareRootResult"
            android:paddingTop="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="#f6ecec"
            android:textColorHint="#f4efef" />
    </LinearLayout>

    <Button
        android:id="@+id/content_main_btn_clickMe"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:hint="@string/btn_hint_clickMe"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
